generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum GlobalRole {
  ADMIN
  MEMBER
}

enum IssueStatus {
  OPEN
  IN_PROGRESS
  CLOSED
}

enum IssuePriority {
  LOW
  MEDIUM
  HIGH
}

enum ProjectRole {
  ADMIN
  MEMBER
}

model User {
  id             String          @id @default(uuid())
  username       String          @unique
  firstname      String?
  lastname       String?
  email          String          @unique
  passwordHash   String
  role           GlobalRole      @default(MEMBER)
  issuesCreated  Issue[]         @relation("IssuesCreated")
  issuesAssigned Issue[]         @relation("IssuesAssigned")
  comments       Comment[]
  memberships    ProjectMember[] 
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model Project {
  id          String          @id @default(uuid())
  name        String
  description String?
  members     ProjectMember[]
  issues      Issue[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

model ProjectMember {
  id            String      @id @default(uuid())
  project       Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId     String
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  roleInProject ProjectRole @default(MEMBER)
  createdAt     DateTime    @default(now())

  @@unique([projectId, userId])
}

model Issue {
  id           String        @id @default(uuid())
  project      Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId    String
  title        String
  description  String?
  status       IssueStatus   @default(OPEN)
  priority     IssuePriority @default(MEDIUM)
  createdBy    User          @relation("IssuesCreated", fields: [createdById], references: [id])
  createdById  String
  assignedTo   User?         @relation("IssuesAssigned", fields: [assignedToId], references: [id])
  assignedToId String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  comments     Comment[]
}

model Comment {
  id        String    @id @default(uuid())
  issue     Issue     @relation(fields: [issueId], references: [id], onDelete: Cascade)
  issueId   String
  author    User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId  String
  content   String
  parent    Comment?  @relation("Thread", fields: [parentId], references: [id])
  parentId  String?
  children  Comment[] @relation("Thread")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
